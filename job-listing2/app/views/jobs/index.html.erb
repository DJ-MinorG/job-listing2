<h1>Job list</h1>
  <div class="pull-right">
    <%#= link_to("Add a job", new_job_path, :class => "btn btn-default" ) %>
  </div>
  <div class="dropdown clearfix">
    <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenuDivider" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
      排序
       <span class="caret"></span>
     </button>
     <ul class="dropdown-menu" aria-labelledby="dropdownMenuDivider">
       <li><%= link_to("order by upper bound salary", jobs_path(:order => "by_upper_bound")) %></li>
       <li><%= link_to("order by lower bound salary", jobs_path(:order => "by_lower_bound")) %></li>
   </ul>
 </div>

  <table class="table table-boldered">
    <tr>
      <td>
        title
      </td>
      <td>
        Created by
      </td>
      <td>
        Salary upper bound
      </td>
      <td>
        Salary lower bound
      </td>

    </tr>

  <% @jobs.each do |job| %>
  <tr>
    <td>
      <%= link_to(job.title,job_path(job)) %>
    </td>

    <td>
      <%= job.created_at %>
    </td>
    <td>
      <%= job.wage_upper_bound %>
    </td>
    <td>
      <%= job.wage_lower_bound %>
    </td>
  </tr>
  <% end %>
</table>
